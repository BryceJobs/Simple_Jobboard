

<div class="panel panel-default">
	  <div class="panel-body">
			<h3><%= link_to_if description.blank?, job.title, job_path(job) %></h3>
			<h4><%= job.company %></h4>
			<p><%= number_to_currency job.salary %></p>
			<%  if !description.blank? %>
			<br>
			<p class="well">
				<%= description  %>
			</p> 
			<% end -%>

	  </div>
	  <div class="panel-footer">			
			<%= link_to edit_job_path(job), class: "btn btn-info" do %>
				<i class="fa fa-pencil-square-o fa-2x"></i>
			<% end -%>
			 | 
			<%= link_to job_path(job), method: :delete, data: {confirm: "are you sure"}, class: 'btn btn-danger' do %>
				<i class="fa fa-trash-o fa-2x"></i>
			<% end -%>
		</div>
</div>