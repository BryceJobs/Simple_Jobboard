<!DOCTYPE html>
<html>
<head>
  <title>JobBoard</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <link href='http://fonts.googleapis.com/css?family=PT+Sans+Narrow:400,700' rel='stylesheet' type='text/css'>
  <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
  <%= csrf_meta_tags %>
</head>
<body>
<nav class="navbar navbar-default navbar-fixed-top" role="navigation">
	<div class="container">
		<a class="navbar-brand" href="<%= root_path %>">Jooka Jobs</a>
		<ul class="nav navbar-nav">
			<li class="active">
				<a href="<%= root_path %>">All Jobs</a>
				<% Category.all.each do |cat| %>
					<li><a  href="<%= jobs_path + '/' + cat.name.humanize %>"><%= cat.name %></a></li> 
				<% end -%>
			</li>
			
		</ul>
		<p class="navbar-text pull-right">
			<%= link_to "Add new Job", new_job_path %>
		</p>
	</div>
</nav>

<div id="main_content" class="container">
	<% flash.each  do  |name, msg| %>	
		<%= content_tag(:div, msg, class: "alert alert-#{name.eql?('notice') ? 'success' : 'danger' }") -%>
	<% end -%>

	<%= yield %>
	
</div>


</body>
</html>
